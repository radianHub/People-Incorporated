<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Other_Reason_Required</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISPICKVAL(Closed_Reason__c, &quot;Other&quot;), ISBLANK(Other_Reason__c))</errorConditionFormula>
    <errorMessage>Please provide an Other Reason before marking referral closed.</errorMessage>
</ValidationRule>
